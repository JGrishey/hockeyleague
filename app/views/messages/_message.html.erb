<div class="row mt-1 pt-2">
    <div class="col-12 border <%= message.id % 2 == 0 ? 'border-green' : 'border-blue' %> border-top-0 border-right-0 border-bottom-0">
        <div class="row justify-content-between mb-2">
            <%= link_to profile_path(message.user.user_name), class: "col-3 text-left font-weight-bold" do %>
                <%= message.user.user_name %>
            <% end %>
            <div class="col-3 text-right text-muted">
                <%= time_ago_in_words(message.created_at) %> ago
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-left message-to-be-parsed">
                <%= simple_format(message.body) %>
            </div>
        </div>
    </div>
</div>