<%= simple_form_for([subforum, post]) do |f| %>
    <label class="text-label">
        Title
    </label>
    <%= f.input_field :title, required: true, class: "text-input" %>

    <label class="textbox-label">
        Content
    </label>
    <%= f.input_field :content, as: :text, class: "textbox-input" %>

    <%= f.button :submit, "Edit post", class: "submit-post-btn" %>
<% end %>

<% if current_user == post.user %>
    <%= link_to "Delete post", subforum_post_path(subforum, post), method: :delete %>
<% end %>