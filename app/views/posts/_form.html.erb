<%= simple_form_for(post) do |f| %>
    <label class="text-label">
        Title
    </label>
    <%= f.input_field :title, required: true, class: "text-input" %>

    <label class="textbox-label">
        Content
    </label>
    <%= f.input_field :content, as: :text, class: "textbox-input" %>

    <%= f.button :submit, "#{params[:action] === "edit" ? "Edit" : "Submit"} post", class: "submit-post-btn" %>
<% end %>

<% if params[:action] === "edit" && current_user == post.user %>
    <%= link_to "Delete post", post_path(post), method: :delete %>
<% end %>