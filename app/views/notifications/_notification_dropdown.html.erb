<div class="dropdown notification-dropdown">
    <button class="btn btn-default" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <%= current_user.notifications.where(read: false).count %>
        <%= octicon "bell" %>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <li class="dropdown-header text-center">Notifications</li>
        <%= render current_user.notifications.where(read: false).order("created_at DESC") %>
    </ul>
</div>