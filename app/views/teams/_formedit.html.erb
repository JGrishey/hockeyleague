<div class="header">
    Edit team
</div>
<%= form_for(team, :url => url_for(:action => "update", :controller => "teams")) do |f| %>
    <div class="input">
        <label class="text-label">
            Name
        </label>
        <%= f.text_field :name, required: true, class: "text-input" %>
    </div>

    <div class="input">
        <label class="team-label">Logo</label>
        <a id="upload-btn" class="upload">Upload</a>
        <span id="file-display"></span>
        <%= f.file_field :logo, class: "team-logo" %>
    </div>

    <%= f.submit "Update Team", class: "submit-btn" %>
<% end %>

<div class="delete">
    <%= link_to "Delete team", league_season_team_path(season.league, season, team), method: :delete %>
</div>