<div class="team-schedule">
    <div class="header">
        <%= link_to league_season_team_path(@team.season.league, @team.season, @team), method: :get do %>
            <img class="logo" src="<%= get_logo(@team) %>"/> <%= @team.name %> <%= @team.season.title %> Schedule
        <% end %>
    </div>
    <div class="schedule">
        <% @games.each do |key, values| %>
            <div class="set">
                <div class="date">
                    <%= key %>
                </div>

                <% values.each do |v| %>
                    <%= link_to league_season_game_path(v.season.league, v.season, v), method: :get do %>
                        <div class="game">
                            <img class="logo" src="<%= get_logo(v.away_team) %>"/>
                            <div class="team">
                                <%= v.away_team.name %>
                            </div>
                            <% if v.final %>
                                <div class="score">
                                    <%= v.away_goals.count %>
                                </div>
                                <div class="score">
                                    <%= v.home_goals.count %>
                                </div>
                            <% else %>
                                <div class="score">
                                    TBD
                                </div>
                            <% end %>
                            <div class="team">
                                <%= v.home_team.name %>
                            </div>
                            <img class="logo" src="<%= get_logo(v.home_team) %>"/>
                        </div>
                    <% end %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>