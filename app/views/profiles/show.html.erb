<div class="show-profile-container">
    <div class="info">
        <%= @user.user_name %>
        <%= @user.email %>
        <%= @user.bio %>
        <img src=<%= asset_url(@user.avatar) %>/>
    </div>

    <% if current_user == @user %>
        <%= link_to "Edit profile", edit_profile_path(@user.user_name), method: :get %>
    <% end %>
</div>