<% if game.home_team.captain == current_user || game.away_team.captain == current_user || current_user.admin %>
    <div class="options">
        <% if game.home_team.captain == current_user || current_user.admin %>
            <span class="option"><%= link_to "Enter home stats", enter_home_stats_league_season_game_path(season.league, season, game), method: :get %></span>
            <span class="option"><%= link_to "Submit home players", submit_home_players_league_season_game_path(season.league, season, game), method: :get %></span>
        <% end %>
        <% if game.away_team.captain == current_user || current_user.admin %>
            <span class="option"><%= link_to "Enter away stats", enter_away_stats_league_season_game_path(season.league, season, game), method: :get %></span>
            <span class="option"><%= link_to "Submit away players", submit_away_players_league_season_game_path(season.league, season, game), method: :get %></span>
        <% end %>
        <% if !game.final && current_user.admin %>
            <span class="option"><%= link_to "Make final", make_final_league_season_game_path(season.league, season, game), method: :post %></span>
        <% end %>
    </div>
<% end %>

<div class="banner">
        <div class="logo">
            <%= link_to league_season_team_path(season.league, season, game.away_team), method: :get do %>
                <img class="img-logo" src="<%= get_logo(game.away_team) %>"/>
            <% end %>
        </div>
        <div class="name">
            <%= link_to game.away_team.name, league_season_team_path(season.league, season, game.away_team), method: :get %>
        </div>
        <% if game.final %>
            <div class="score">
                <%= game.away_goals.count %>
            </div>
        <% end %>
        <% if game.final %>
            <div class="score">
                <%= game.home_goals.count %>
            </div>
        <% end %>
        <div class="name">
            <%= link_to game.home_team.name, league_season_team_path(season.league, season, game.home_team), method: :get %>
        </div>
        <div class="logo">
            <%= link_to league_season_team_path(season.league, season, game.home_team), method: :get do %>
                <img class="img-logo" src="<%= get_logo(game.home_team) %>"/>
            <% end %>
        </div>
    <div class="datetime">
        <%= game.date.strftime("%I:%M %p %^b %d %Y") %>
    </div>
</div>
<% if game.final %>
    <div class="game-summary">
        <div class="first-column">
            <div class="teams">
                <div class="headers">
                    <div class="logo">
                    </div>
                    <div class="name">
                    </div>
                    <div class="sog">
                        SOG
                    </div>
                    <div class="toa">
                        TOA
                    </div>
                    <div class="faceoff">
                        FO%
                    </div>
                    <div class="pp">
                        PP
                    </div>
                    <div class="pim">
                        PIM
                    </div>
                    <div class="hits">
                        HITS
                    </div>
                </div>
                <div class="team">
                    <div class="logo">
                        <img class="img-logo" src="<%= get_logo(game.away_team) %>"/>
                    </div>
                    <div class="name">
                        <%= game.away_team.name %>
                    </div>
                    <div class="sog">
                        <%= game.away_stats.inject(0){|sum, e| sum + e.shots} %>
                    </div>
                    <div class="toa">
                        <%= game.away_toa_minutes %>:<%= sprintf '%02d', game.away_toa_seconds %>
                    </div>
                    <div class="faceoff">
                        <%= game.away_stats.inject(0){|sum, e| sum + e.fot} > 0 ? "#{ (game.away_stats.inject(0){|sum, e| sum + e.fow}.to_f / game.away_stats.inject(0){|sum, e| sum + e.fot} * 100).to_i }%" : "0%" %>
                    </div>
                    <div class="pp">
                        <%= game.away_ppg %>/<%= game.away_ppo %>
                    </div>
                    <div class="pim">
                        <%= game.away_penalties.inject(0){|sum, e| sum + e.duration} %>
                    </div>
                    <div class="hits">
                        <%= game.away_stats.inject(0){|sum, e| sum + e.hits} %>
                    </div>
                </div>
                <div class="team">
                    <div class="logo">
                        <img class="img-logo" src="<%= get_logo(game.home_team) %>"/>
                    </div>
                    <div class="name">
                        <%= game.home_team.name %>
                    </div>
                    <div class="sog">
                        <%= game.home_stats.inject(0){|sum, e| sum + e.shots} %>
                    </div>
                    <div class="toa">
                        <%= game.home_toa_minutes %>:<%= sprintf '%02d', game.home_toa_seconds %>
                    </div>
                    <div class="faceoff">
                        <%= game.home_stats.inject(0){|sum, e| sum + e.fot} > 0 ? "#{ (game.home_stats.inject(0){|sum, e| sum + e.fow}.to_f / game.home_stats.inject(0){|sum, e| sum + e.fot} * 100).to_i }%" : "0%"%>
                    </div>
                    <div class="pp">
                        <%= game.home_ppg %>/<%= game.home_ppo %>
                    </div>
                    <div class="pim">
                        <%= game.home_penalties.inject(0){|sum, e| sum + e.duration} %>
                    </div>
                    <div class="hits">
                        <%= game.home_stats.inject(0){|sum, e| sum + e.hits} %>
                    </div>
                </div>
            </div>
            <div class="player-stats">
                <div class="table-header">
                    <%= !@away_box.empty? ? game.away_team.name : "" %>
                </div>
                <div class="away" id="away" data-data="<%= @away_box.to_json %>">
                </div>
                <div class="table-header">
                    <%= !@home_box.empty? ? game.home_team.name : "" %>
                </div>
                <div class="home" id="home" data-data="<%= @home_box.to_json %>">
                </div>
            </div>
            <%= javascript_pack_tag "games/player-stats-away" %>
            <%= javascript_pack_tag "games/player-stats-home" %>
        </div>
        <div class="second-column">
            <div class="goals">
                <div class="team">
                    <div class="header">
                        <img class="logo-img" src="<%= get_logo(game.away_team) %>"> <%= game.away_team.name %>
                    </div>
                    <% if game.away_goals.any? %>
                        <% game.away_goals.each do |goal| %>
                            <div class="goal">
                                <div class="photo">
                                    <img class="player-photo" src="<%= get_avatar(goal.scorer) %>"/>
                                </div>
                                <div class="info">
                                    <div class="scorer">
                                        <% if goal.scorer %>
                                            <%= goal.scorer.user_name %>
                                        <% else %>
                                             CPU
                                        <% end %>
                                    </div>
                                    <div class="assists">
                                        <% if goal.primary && goal.secondary %>
                                            <%= goal.primary.user_name %>, <%= goal.secondary.user_name %>
                                        <% elsif goal.primary && !goal.secondary %>
                                            <%= goal.primary.user_name %>
                                        <% elsif !goal.primary && goal.secondary %>
                                            CPU, <%= goal.secondary.user_name %>
                                        <% else %>
                                            Unassisted
                                        <% end %>
                                    </div>
                                    <div class="type">
                                        <%= goal.time_scored %>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    <% else %>
                        <div class="none">No goals scored</div>
                    <% end %>
                </div>
                <div class="team">
                    <div class="header">
                        <img class="logo-img" src="<%= get_logo(game.home_team) %>"> <%= game.home_team.name %>
                    </div>
                    <% if game.home_goals.any? %>
                        <% game.home_goals.each do |goal| %>
                            <div class="goal">
                                <div class="photo">
                                    <img class="player-photo" src="<%= get_avatar(goal.scorer) %>"/>
                                </div>
                                <div class="info">
                                    <div class="scorer">
                                        <% if goal.scorer %>
                                            <%= goal.scorer.user_name %>
                                        <% else %>
                                             CPU
                                        <% end %>
                                    </div>
                                    <div class="assists">
                                        <% if goal.primary && goal.secondary %>
                                            <%= goal.primary.user_name %>, <%= goal.secondary.user_name %>
                                        <% elsif goal.primary && !goal.secondary %>
                                            <%= goal.primary.user_name %>
                                        <% elsif !goal.primary && goal.secondary %>
                                            CPU, <%= goal.secondary.user_name %>
                                        <% else %>
                                            Unassisted
                                        <% end %>
                                    </div>
                                    <div class="type">
                                        <%= goal.time_scored %>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    <% else %>
                        <div class="none">No goals scored</div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
<% end %>