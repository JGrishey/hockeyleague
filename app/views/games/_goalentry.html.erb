<fieldset class="goal">
    <%= f.hidden_field :team_id, value: team_id %>
    <%= f.hidden_field :_destroy, class: "removable" %>
    <%= f.select :scorer_id, players.collect{|p| [p.player.user_name, p.player.id]}, include_blank: true, default: nil %>
    <%= f.select :primary_id, players.collect{|p| [p.player.user_name, p.player.id]}, include_blank: true, default: nil %>
    <%= f.select :secondary_id, players.collect{|p| [p.player.user_name, p.player.id]}, include_blank: true, default: nil %>
    <%= f.select :time_scored, ["5 on 5", "Shorthanded", "Power Play"] %>
    <%= link_to "<img class='delete' src='#{asset_path("feathericons/x.svg")}'/>".html_safe, '#', class: "remove_goals" %>
</fieldset>
