<% if recent_games.any? %>
    <div class="carousel slide mt-2 rounded" id="gameCarousel" data-ride="carousel" style="background-color: #fff;">
        <ol class="carousel-indicators">
            <% recent_games.each_with_index do |(key, values), index| %>
                <li data-target="#gameCarousel" data-slide-to="<%= index %>" class="<%= index == 0 ? "active" : "" %>"></li>
            <% end %>
        </ol>
        <div class="carousel-inner">
            <% recent_games.each_with_index do |vs, index| %>
                <div class="<%= index == 0 ? "carousel-item active" : "carousel-item" %>">
                    <div class="row justify-content-center mt-2">
                        <% vs[1].each do |serie| %>
                            <div class="col-5 col-lg-2 border border-light p-3">
                                <div class="row justify-content-center">
                                    <div class="col-4 align-self-center">
                                        <div class="row justify-content-center">
                                            <% serie[0].each do |team| %>
                                                <div class="col-12 align-self-center mt-2">
                                                    <img class="img-responsive align-self-center" style="max-height: 100%; max-width: 100%;" src="<%= get_logo(team) %>"/>
                                                </div>
                                            <% end %>
                                        </div>
                                    </div>
                                    <% serie[1].each_with_index do |game, index| %>
                                        <%= link_to league_season_game_path(league, season, game), method: :get, class: "col-2 p-0 align-self-center" do %>
                                            <div class="row">
                                                <% if game.final %>
                                                    <div class="col-12 text-center align-self-center mt-2">
                                                        <%= serie[0].first == game.away_team ? game.away_goals : game.home_goals %>
                                                    </div>

                                                    <div class="col-12 text-center align-self-center mt-2">
                                                        <%= serie[0].first == game.home_team ? game.home_goals : game.away_goals %>
                                                    </div>
                                                <% else %>
                                                    <div class="col-12 text-center align-self-center mt-2">
                                                        G<%= index+1 %>
                                                    </div>
                                                <% end %>
                                            </div>
                                        <% end %>
                                    <% end %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <div class="carousel-caption d-block mt-4 text-dark" style="position: relative; left: auto; right: auto;">
                        <h3><%= vs[0] %></h3>
                    </div>
                </div>
            <% end %>
        </div>
        <a class="carousel-control-prev text-dark" href="#gameCarousel" role="button" data-slide="prev">
            <span aria-hidden="true"><%= octicon "chevron-left" %></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#gameCarousel" role="button" data-slide="next">
            <span aria-hidden="true"><%= octicon "chevron-right" %></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
<% end %>