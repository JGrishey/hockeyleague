<% if recent_games.any? %>
    <div class="carousel slide mt-2 rounded" id="gameCarousel" data-ride="carousel" style="background-color: #fff;">
        <ol class="carousel-indicators">
            <% recent_games.each_with_index do |(key, values), index| %>
                <li data-target="#gameCarousel" data-slide-to="<%= index %>" class="<%= index == 0 ? "active" : "" %>"></li>
            <% end %>
        </ol>
        <div class="carousel-inner">
            <% recent_games.each_with_index do |(key, values), index| %>
                <div class="<%= index == 0 ? "carousel-item active" : "carousel-item" %>">
                    <div class="row justify-content-center mt-2">
                        <% values.each do |game| %>
                            <%= link_to league_season_game_path(league, season, game), method: :get, class: "col-2 border border-light p-3" do %>
                                    <div class="row">
                                        <div class="col-6 text-center align-self-center">
                                            <img class="img-responsive align-self-center" style="max-height: 100%; max-width: 100%;" src="<%= get_logo(game.away_team) %>"/>
                                        </div>

                                        <div class="col-6 text-center align-self-center">
                                            <img class="img-responsive align-self-center" style="max-height: 100%; max-width: 100%;" src="<%= get_logo(game.home_team) %>"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <% if game.final %>
                                            <div class="col-6 text-center">
                                                <%= game.away_goals %>
                                            </div>

                                            <div class="col-6 text-center">
                                                <%= game.home_goals %>
                                            </div>
                                        <% else %>
                                            <div class="col-12 text-center">
                                                TBD
                                            </div>
                                        <% end %>
                                    </div>
                            <% end %>
                        <% end %>
                    </div>
                    <div class="carousel-caption d-block mt-4 text-dark" style="position: relative; left: auto; right: auto;">
                        <h3><%= key %></h3>
                    </div>
                </div>
            <% end %>
        </div>
        <a class="carousel-control-prev text-dark" href="#gameCarousel" role="button" data-slide="prev">
            <span aria-hidden="true"><%= octicon "chevron-left" %></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#gameCarousel" role="button" data-slide="next">
            <span aria-hidden="true"><%= octicon "chevron-right" %></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
<% end %>