<div class="card border-accent mb-1">
    <%= link_to subforum do %>
        <div class="card-body">
            <div class="card-title">
                <%= subforum.title %>
            </div>
            <div class="card-text text-muted">
                <%= pluralize(subforum.posts.count, "post") %>
            </div>
        </div>
    <% end %>
</div>