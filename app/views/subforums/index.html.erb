<%= render 'games/carousel', league: @main_league, season: @season, recent_games: @recent_games %>

<div class="row mt-4">
    <div class="col-12">
        <div class="card bg-danger text-white">
            <div class="card-header text-center font-weight-bold text-uppercase">
                Announcement
            </div>
            <div class="card-body text-center">
                <div class="text-center mb-3">
                    <%= link_to "Sign up for Season 33!", signup_league_season_path(@main_league, @season), method: :get %>
                </div>
                <div class="text-center mb-3">
                    Draft is Monday, October 16th. Season starts October 22nd. Signups close October 8th!
                </div>
                <%= link_to "Who's signed up?", signups_league_path(@main_league), method: :get %>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 col-lg-8 mb-4">
        <div class="card bg-dark text-white mb-3" style="margin-bottom: 0.2em;">
            <div class="card-body">
                <div class="card-text">
                    Chat
                </div>
            </div>
        </div>

        <div id="chatbox">
            <%= render 'chat_boxes/chatbox', chat_box: @chatbox, messages: @messages, message: Message.new %>
        </div>
        
        <div class="card bg-dark text-white mt-4 mb-3" style="margin-bottom: 0.2em;">
            <div class="card-body">
                <div class="card-text">
                    Forum
                </div>
            </div>
        </div>
        
        <% @subforums.each do |subforum| %>
            <%= render 'preview', subforum: subforum %>
        <% end %>
    </div>

    <div class="col-12 col-lg-4">
        <div class="card bg-dark text-white mb-3" style="margin-bottom: 0.2em;">
            <div class="card-body">
                <div class="card-text">
                    Leagues
                </div>
            </div>
        </div>

        <% @leagues.each do |league| %>
            <%= link_to league, method: :get do %>
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <%= league.name %>
                        </div>
                        <div class="card-text text-muted">
                            <%= pluralize(league.seasons.count, "season") %>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>

        <% if !current_user.signed_up_for(@season) %>
            <%= link_to signup_league_season_path(@main_league, @season), class: "card mt-4 bg-dark text-white mb-3", method: :get do %>
                <div class="card-body">
                    Sign up for Season 33
                </div>
            <% end %>
        <% end %>

        <%= link_to pages_player_rankings_path, class:"card mt-4", method: :get do %>
            <div class="card-body justify-content-center text-center">
                <img class="img-fluid" src="<%= asset_path("PlayerRatings.png") %>"/>
            </div>
        <% end %>

        <div class="card mt-4">
            <div class="card-body">
                <div class="card-title">
                    Online members
                </div>
                <div class="card-text">
                    <% User.online.each do |u| %>
                        <span class="text-primary"><%= link_to u.user_name, profile_path(u.user_name), method: :get, class: "card-link" %></span>, 
                    <% end %>
                </div>
            </div>
        </div>

        <div class="card bg-dark text-white mt-4 mb-3">
            <div class="card-body">
                <div class="card-text">
                    Recent posts
                </div>
            </div>
        </div>

        <% @recent_posts.each do |post| %>
            <%= link_to subforum_post_path(post.subforum, post), method: :get do %>
                <div class="card">
                    <div class="card-body row p-2">
                        <div class="col-3 text-center align-self-center">
                            <img class="img-responsive rounded-circle" style="max-height: 100%; max-width: 100%;" src=<%= get_avatar(post.most_recent.user) %>/>
                        </div>
                        <div class="col-9 p-2">
                            <div class="row">
                                <%= post.title %>
                            </div>
                            <div class="row">
                                <span class="text-muted"><%= (post.updated_at - 4.hours).strftime("%b %d at %I:%M %p") %></span>
                            </div>
                            <div class="row">
                                <span class="text-muted"><%= post.subforum.title %></span>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</div>

<%= javascript_pack_tag 'chat/new-message' %>