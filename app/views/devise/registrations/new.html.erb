<div class="log-in">
    <div class="header">
        <img class="logo" src="<%= image_path("MooseLogo.png") %>"/>
        Sign up
    </div>
    
    <div class="form">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="error">
                <%= f.error_notification %>
            </div>

            <%= f.input_field :email, required: false, autofocus: true, class: "text-input" %>
            <label class="text-field">Email</label>

            <%= f.input_field :password, required: false, class: "text-input" %>
            <label class="text-field">Username</label>

            <%= f.input_field :password, required: false, class: "text-input" %>
            <label class="text-field">Password</label>

            <%= f.input_field :password, required: false, class: "text-input" %>
            <label class="text-field">Confirm Password</label>

            <%= f.button :submit, "Sign up", class: "login-btn" %>
        <% end %>

        <div class="help">
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>