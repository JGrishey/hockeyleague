<div class="row justify-content-center mt-2">
    <div class="col-12 col-lg-6">
        <div class="card align-self-center">
            <div class="card-header text-center">
                <div class="row">
                    <div class="col">
                        <img class="img-responsive" width="100" height="100" src="<%= image_path("MooseLogo.png") %>"/>
                    </div>
                </div>
                <div class="font-weight-bold text-uppercase mt-2" style="font-size: 2em;">
                    Log in
                </div>
            </div>
            <div class="card-body">
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                    <div class="form-group p-3">
                        <%= f.input_field :email, required: false, autofocus: true, class: "form-control" %>
                        <label>Email</label>

                        <%= f.input_field :password, required: false, class: "form-control" %>
                        <label class="text-field">Password</label>

                        <div class="text-center">
                            <%= f.button :submit, "Log in", class: "btn btn-outline-dark mt-2", style: "cursor: pointer;" %>
                        </div>
                    </div>

                <% end %>

                <div class="text-center text-muted">
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>