<div class="row justify-content-center mt-2">
    <div class="col-12 col-lg-6">
        <div class="card align-self-center">
            <div class="card-header text-center">
                <div class="row">
                    <div class="col">
                        <img class="img-responsive" width="100" height="100" src="<%= image_path("MooseLogo.png") %>"/>
                    </div>
                </div>
                <div class="font-weight-bold text-uppercase mt-2" style="font-size: 2em;">
                    New Password
                </div>
            </div>
            <div class="card-body">
                <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

                    <%= f.input :reset_password_token, as: :hidden %>
                    <%= f.full_error :reset_password_token %>

                    <div class="form-group p-3">
                        <%= f.input_field :password, required: false, autofocus: true, class: "form-control" %>
                        <label>New Password</label>

                        <%= f.input_field :password_confirmation, required: false, class: "form-control" %>
                        <label class="text-field">Password Confirmation</label>

                        <div class="text-center">
                            <%= f.button :submit, "Change password", class: "btn btn-outline-dark mt-2", style: "cursor: pointer;" %>
                        </div>
                    </div>

                <% end %>

                <div class="text-center text-muted">
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>
